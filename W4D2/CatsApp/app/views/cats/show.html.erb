<h1><%= @cat.name %></h1>

<table>
  <th>Attribute</th>
  <th>Value</th>
  <tr>
    <td>Age</td>
    <td> <%= @cat.age %></td>
  </tr>
  <tr>
    <td>BirthDate</td>
    <td> <%= @cat.birth_date %></td>
  </tr>
  <tr>
    <td>Color</td>
    <td> <%= @cat.color %></td>
  </tr>
  <tr>
    <td>Sex</td>
    <td> <%= @cat.sex %></td>
  </tr>
</table>

<h4>Description</h4>
<p>
<%= @cat.description %>
</p>

<% requests = @cat.cat_rental_requests %>

<% unless requests.empty? %>
  <table>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
    <th>Approve?</th>
    <th>Deny?</th>
    <% requests.each do |request| %>
    <tr>
      <td><%= request.start_date %></td>
      <td><%= request.end_date %></td>
      <td><%= request.status %></td>
      <% if request.pending? %>
        <td><%= button_to "Approve Request", approve_cat_rental_request_url(request) %></td>
        <td><%= button_to "Deny Request", deny_cat_rental_request_url(request) %></td>
      <% end %>
    </tr>
    <% end %>
  </table>
<% end %>

<%= link_to "Back to cats", cats_url %>
<br>

<%= link_to "Edit info", edit_cat_url %>
