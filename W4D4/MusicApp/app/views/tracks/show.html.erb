<h1><%= @track.name %> by <%= @track.album_band_name %></h1>
<h2>from <%= @track.album_title %></h2>

<% if is_admin? %>
  <br>
  <%= link_to "Edit track info", edit_track_url(@track) %>
  <br>
  <%= button_to "Delete track", track_url(@track), method: :delete %>
<% end %>


<h3>Track type:</h3> <%= @track.track_type %>
<br>
<% if @track.lyrics %>
  <h3>Lyrics:</h3>
  <p>
    <%= ugly_lyrics(@track.lyrics) %>
  </p>
<% end %>

<% unless @notes.empty? %>
  <h3>Notes:</h3>
  <%= render @notes %>
<% end %>

<h3>Leave a note!</h3>
<%= render "notes/form", track_id: @track.id %>

<%= link_to "Back to album", album_url(@track.album_id) %>
